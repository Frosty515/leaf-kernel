#!/bin/bash

target_arch=${1:-x86_64}
bootloader=${2:-limine}

if [ ! -d "build-$target_arch-$bootloader" ]; then
    echo ""build-$target_arch-$bootloader" Doest exist! You have to configure the kernel before building! Use ./env/configure <target> <bootloader> <toolchain> (These options are optional!)."
    exit
fi

pushd "build-$target_arch-$bootloader" > /dev/null
make
status=$?
if [ $status -ne 0 ]; then
    echo -e ">>> \033[1m\033[31mFailed to build!\033[0m"
    exit 1
fi
popd > /dev/null

pushd "arch/$target_arch" > /dev/null
./gen-$bootloader.sh
popd > /dev/null

echo -e ">>> Successfully built Leaf-$target_arch-$bootloader."